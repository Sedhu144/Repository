#include<stdio.h>
void main()
{
    int i,n,e=0,o=0;
    printf("enter the num of elements: ");
    scanf("%d",&n);
    int evenindex=0, oddindex=0;
    int input[n],even[n],odd[n];
    printf("\nEnter the elements:");
    for(i=0;i<n;i++)
    {
        scanf("%d",&input[i]);
    }
    for(i=0;i<n;i++)
    {
        if(input[i]%2==0)
        {
            even[evenindex++]=input[i];
            e++
        }
        else
        {
            odd[oddindex++]=input[i];
            o++
        }
    }
    printf("even numbers are :\n");
    for(i=0;i<e;i++)
    {
        printf(" %d ",even[i]);
    }
    printf("\n");
    printf("the odd num are :");
    for(i=0;i<o;i++)
    {
        printf(" %d ",odd[i]);
    }
}
