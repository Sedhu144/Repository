#include<stdio.h>
void main()
{
    char ch;
    printf("enter a character:");
    scanf("%c",&ch);
    if((ch>='a' && ch <='z') ||(ch>='A' && ch<='Z') )
    {
    switch(ch)
    {
        case 'a':
        case 'A':
        printf("vowel");
        break;
        
        case 'e':
        case 'E':
        printf("vowel");
        break;
         
        case 'i':
        case 'I':
        printf("vowel");
        break;
        
        case 'o':
        case 'O':
        printf("vowel");
        break;
        
        case 'u':
        case 'U':
        printf("vowel");
        break;
        
        default:
        printf("is consonant");
    }
    }
    else
    {
        printf("enter a character");
    }
}

